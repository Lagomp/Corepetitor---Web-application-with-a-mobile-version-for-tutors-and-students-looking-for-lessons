@model Tutor.Models.Rating

@{
    ViewData["Title"] = "Wystaw opinię";
}

<h1>Wystaw opinię</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EnrollmentId" />
            <div class="form-group">
                <label asp-for="Feedback" class="control-label"></label>
                <input asp-for="Feedback" class="form-control" />
                <span asp-validation-for="Feedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stars" class="control-label"></label>
                <select asp-for="Stars" class="form-control" asp-items="ViewBag.Ratings"></select>
                <span asp-validation-for="Stars" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ukończ i wystaw opinię" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Powrót</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
