@model Tutor.Models.Enrollment

@{
    ViewData["Title"] = "Zarezerwuj spotkanie";
}

<h1 class="alert alert-success text-black text-center">Zarezerwuj spotkanie</h1>

<h4>Rezerwacja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="TeacherSubjectId" />
            @if (ViewBag.Error != null)
            {
                <span class="text-danger">@ViewBag.Error</span>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeacherSubjectId" class="control-label"></label>
                <select disabled class="form-control" asp-items="ViewBag.TeacherSubjectId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            
            @if (User.IsInRole("Tutor"))
            {
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" asp-items="ViewBag.Status" class="form-control"></select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }
            <div style="margin-bottom:10px; margin-top:10px" class="form-group">
                <input type="submit" value="Zarezerwuj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
