@model Tutor.Models.TeacherSubject

@{
    ViewData["Title"] = "Dodaj ofertę";
}

<h1 class="alert alert-info text-black text-center">Dodaj ofertę</h1>

<h4>Dodaj ofertę</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">Subject</label>
                <select asp-for="SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
                <a href="/Subjects/Create">Nie znalazłeś swojego przedmiotu? Kliknij tutaj, aby go dodać.</a>
            </div>
            <div class="form-group">
                <label asp-for="IsAvailable" class="control-label"></label>
                <input asp-for="IsAvailable" class="form-control" />
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MonthlyFee" class="control-label"></label>
                <input type="number" asp-for="MonthlyFee" class="form-control" />
                <span asp-validation-for="MonthlyFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localization" class="control-label"></label>
                <input asp-for="Localization" class="form-control" />
                <span asp-validation-for="Localization" class="text-danger"></span>
            </div>
            <div style="margin-bottom:10px; margin-top:10px" class="form-group">
                <input type="submit" value="Dodaj ofertę" class="btn btn-primary" />
                <a class="btn btn-warning" asp-action="Index">Powrót</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
