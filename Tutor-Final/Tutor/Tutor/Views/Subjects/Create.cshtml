@model Tutor.Models.Subject

@{
    ViewData["Title"] = "Dodaj przedmiot";
}

<h1 class="alert alert-primary text-black text-center">Dodaj przedmiot</h1>

<h4>Dodaj przedmiot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div style="margin-bottom:10px; margin-top:10px" class="form-group">
                <input type="submit" value="Dodaj przedmiot" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
