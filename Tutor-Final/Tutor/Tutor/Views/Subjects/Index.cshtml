@model IEnumerable<Tutor.Models.Subject>

@{
    ViewData["Title"] = "Przedmioty";
}

<h1 class="alert alert-primary text-black text-center">Przedmioty</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Dodaj nowy przedmiot</a>
</p>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> 
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> 
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
