@page
@model IndexModel
@{
    ViewData["Title"] = "Edytuj profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Description" class="form-control" />
                <label asp-for="Input.Description" class="form-label"></label>
                <span asp-validation-for="Input.Description" class="text-danger"></span>
            </div>

             <div class="form-floating">
                <input asp-for="Input.Education" class="form-control" />
                <label asp-for="Input.Education" class="form-label"></label>
                <span asp-validation-for="Input.Education" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Experience" class="form-control" />
                <label asp-for="Input.Experience" class="form-label"></label>
                <span asp-validation-for="Input.Experience" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Zapisz zmiany</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
